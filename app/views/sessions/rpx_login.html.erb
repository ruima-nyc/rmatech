<h1>新用户注册</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label '昵称' %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label '密码' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit '注册' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>